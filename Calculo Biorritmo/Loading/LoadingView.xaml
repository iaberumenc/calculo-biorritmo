<Window x:Class="Calculo_Biorritmo.Loading.LoadingView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculo_Biorritmo.Loading"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Background="{x:Null}"
        AllowsTransparency="True"
        WindowStyle="None"
        Title="LoadingView" Height="150" Width="460">
    <Border Background="White" CornerRadius="30">
        <Grid >
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label Name="status" Content="Buscando base de datos" HorizontalAlignment="Center" FontSize="16"/>
                <ProgressBar Name="progress" Width="400" Height="50"/>
            </StackPanel>
        </Grid>
    </Border>
    
</Window>
